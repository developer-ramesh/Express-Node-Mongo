extends ../layout

block content
	h1.
		#{title}
	form#formAddBlob(name="addblob",method="post",action="/blogs")
		p Name: 
			input#inputName(type="text", placeholder="Name", name="name")
		p Phone:
			input#inputBadge(type="number", placeholder="ex. 123456", name="phone")
		p DOB: 
			input#inputDob(type="date", name="dob")
		p Are You Loved?: 
			input#inputIsLoved(type="checkbox", name="isloved")
		p
			button#btnSubmit(type="submit") submit
                
               
                        
