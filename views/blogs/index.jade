extends ../layout

block content
    h1.
         #{title}  

    a(href='/blogs/new') Add New Blog 
    span  | 
    a(href='/')  Home 
    
    table(border='1')

       each blob, i in blobs
            tr
                td
                   = blob.name
                td
                   = blob.badge
                
                td
                    = blob.dob
                td
                    = blob.isloved
                td
                    = blob._id
                td
                
                    form(action='/blogs/#{blob._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                        input(type='hidden',value='DELETE',name='_method')
                        button(type='submit').
                            Delete
                td 
                    a(href='/blogs/#{blob._id}/edit') Edit
                td
                    a(href='/blogs/#{blob._id}') Show